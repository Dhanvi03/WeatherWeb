<!DOCTYPE html>
<html lang="en">
<head>
   {{>headerLinks}}
</head>
<body>
   <!-- Navbar -->
   {{>header}}

    <!-- main body -->
    <div class="container-fluid main_header">
      <div class="row">
          <div class="col-md-10 col-12 mx-auto">
            

              <div class="main_content">
                <form class="temp_form">
                    <input type="text" id="cityName" placeholder="Enter City Name" autocomplete="off">
                    <input type="submit" value="Search" id="submitBtn">
                </form>
              </div>
    
                <div class="tempInfo">
                    <div class="top_layer">
                        <p id="day">Fri </p>
                        <p id="today_date">1 feb</p>
                    </div>
                    <div class="main_layer">
                        <p id="city_name">Output Here</p>
                        <div class="middle_layer data_hidden">
                            <p ><span id="temp">0</span> <sup>o</sup> C</p>
                            <p id="temp_status"><i class="fa fa-cloud" aria-hidden="true"></i></p>
                        </div>
                    </div>
       
            </div>
          </div>
        </div>
    </div>

    <!-- Footer -->
   {{>footer}}

   <script src="js/main.js"></script>
   <script>
      const day = document.getElementById('day');
      const date = document.getElementById('today_date');
      const getCurrentDay = () => {
        let weekday = new Array(7);
        weekday[0]='Sunday';
        weekday[1]='Monday';
        weekday[2]='Tuesday';
        weekday[3]='wednesday';
        weekday[4]='Thrusday';
        weekday[5]='Friday';
        weekday[6]='Saturday';

        let currentTime = new Date();
        let days =weekday[currentTime.getDay()];
        
        day.innerText = days;
      }

      const getCurrentDate = () =>{
        var months =[
          "Jan",
          "Feb",
          "Mar",
          "Apr",
          "May",
          "June",
          "July",
          "Aug",
          "Sep",
          "Oct",
          "Nav",
          "Dec",
        ];
        let currentTime = new Date();
        let Tdate = currentTime.getDate();
        let mon = months[currentTime.getMonth() ];
        date.innerText= `${Tdate}  ${mon}`;

      }
      getCurrentDay();
      getCurrentDate();
   </script>
</body>
</html>