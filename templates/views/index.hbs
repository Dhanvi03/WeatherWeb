<!DOCTYPE html>
<html lang="en">
<head>
    {{>headerLinks}}
</head>
<body>
   <!-- Navbar -->
   {{>header}}

    <!-- main body -->
    <div class="container-fluid main_header">
      <div class="row">
          <div class="col-md-10 col-12 mx-auto">
            <div class="row">

              <!-- Left part -->
            <div class="col-md-6 col-12 main_header_left ">
              <p>Welcome to weather app.</p>
              <h1>Get The Latest <span class="text_clr">Wearther</span> Info Of Your City</h1>
              <a href="/weather"><button>Check Now</button></a>
            </div>

            <!-- Right part -->
            <div class="col-md-5 col-12 main_header_right">
              <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner">
                  <div class="carousel-item active">
                    <img src="imgs/bg1.avif" class=" w-100" alt="First image">
                  </div>
                  <div class="carousel-item">
                    <img src="imgs/bg2.avif" class=" w-100" alt="second image">
                  </div>
                  <div class="carousel-item">
                    <img src="imgs/bg3.avif" class=" w-100" alt="Third Image">
                  </div>
                </div>
               <button class="carousel-control-prev" type="button" data-target="#carouselExampleControls" data-slide="prev">
                  <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                  <span class="sr-only">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-target="#carouselExampleControls" data-slide="next">
                  <span class="carousel-control-next-icon" aria-hidden="true"></span>
                  <span class="sr-only">Next</span>
                </button>
              </div>
            </div>
            </div>
          </div>
        </div>
    </div>

    <!-- Footer -->
    {{>footer}}
</body>
</html>